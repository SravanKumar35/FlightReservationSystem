<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="Sign Up"
        android:textSize="30sp" />


    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/passName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:focusable="false"
        app:errorColor="@color/A400red"
        app:hasClearButton="true"
        app:labelText="First name"
        app:manualValidateError="true"
        app:panelBackgroundColor="#fff"
        app:primaryColor="#f56217"
        app:secondaryColor="#000">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:focusable="false"
        app:errorColor="@color/A400red"
        app:hasClearButton="true"
        app:labelText="Last name"
        app:manualValidateError="true"
        app:panelBackgroundColor="#fff"
        app:primaryColor="#f56217"
        app:secondaryColor="#000">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/et_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:focusable="false"
        app:errorColor="@color/A400red"
        app:hasClearButton="true"
        app:labelText="Enter your age"
        app:manualValidateError="true"
        app:panelBackgroundColor="#fff"
        app:primaryColor="#f56217"
        app:secondaryColor="#000">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/et_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:focusable="false"
        app:errorColor="@color/A400red"
        app:hasClearButton="true"
        app:labelText="Username"
        app:manualValidateError="true"
        app:panelBackgroundColor="#fff"
        app:primaryColor="#f56217"
        app:secondaryColor="#000">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:focusable="false"
        app:errorColor="@color/A400red"
        app:hasClearButton="true"
        app:labelText="password"
        app:manualValidateError="true"
        app:panelBackgroundColor="#fff"
        app:primaryColor="#f56217"
        app:secondaryColor="#000">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="#303F9F"
        android:onClick="OnReg"
        android:text="Submit"
        android:textColor="#ffffff" />

</LinearLayout>


