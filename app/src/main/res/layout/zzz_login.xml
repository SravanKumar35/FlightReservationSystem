<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/zzz_login">

    <LinearLayout
        android:id="@+id/zzz_linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:background="@drawable/background_gradient"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/zzz_linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:padding="20dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username here"/>

        <EditText
            android:hint="123"
            android:id="@+id/etUserName"
            android:drawableRight="@drawable/ic_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password here"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:hint="123"
            android:drawableRight="@drawable/ic_lock_open"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:text="Login"
        android:id="@+id/btn_login"
        android:textColor="#fff"
        android:background="@drawable/rec_gradient"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/zzz_linearlayout2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button"
        android:textColor="#fff"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="20dp"
        android:background="@drawable/rec_gradient"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="30sp"
        android:layout_above="@+id/zzz_linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="@drawable/home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />



</RelativeLayout>